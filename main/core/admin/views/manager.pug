extends ../../../common/_layout

block content
    .container
        h1.mb-4 User Manager
        h2.mb-3 Add User
        .card
            .card-body
                form(action='/user/new', method='post')
                    .form-group
                        label(for='username') Username:
                        input.form-control(type='text', name='username', required)
                    .form-group
                        label(for='password') Password:
                        input.form-control(type='password', name='password', required)
                    .form-group
                        label(for='role') Role:
                        select.form-control(name='role', required)
                            option(value='operator') Operator
                            option(value='admin') Admin
                    .form-group
                        input.btn.btn-primary(type='submit', value='Add User')
        h2.mb-3 Users
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th Username
                        th Role
                        th Action
                tbody
                    each user in users
                        tr
                            td= user.username
                            td= user.role
                            td
                                form(action=`/user/delete/${user._id}`, method='post')
                                    input.btn.btn-danger(type='submit', value='Delete')
